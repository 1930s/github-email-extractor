{
	"manifest_version": 2,

	"name": "GitHub Show Email",
	"description": "",
	"short_name": "Show Email",
	"version": "1.0.0.1",
	"author": "Prabhakar Gupta",
	"homepage_url": "https://github.com/prabhakar267/chrome-github-email",

	"browser_action": {
		"default_title": "GitHub Show Email",
		"default_icon": "assets/images/icon.png"
	},

	"icons": {
		"16": "assets/images/icon.png",
		"48": "assets/images/icon.png",
		"128": "assets/images/icon.png"
	},

	"permissions": [
		"activeTab",
		"https://github-email-id.herokuapp.com/"
	],
	
	"content_scripts": [
		{
			"matches": [
				"https://github.com/*",
				"http://github.com/*"
			],
			"js": [
				"assets/js/jquery.min.js",
				"assets/js/show_email.js"
			]
		}
	]
}
